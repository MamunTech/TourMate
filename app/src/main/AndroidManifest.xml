<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nishad.tourmate">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TravelEventsActivity"
            android:label="@string/title_activity_travel_events"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".SignUpActivity" />
        <activity
            android:name=".AddEventActivity"
            android:label="@string/title_activity_add_event"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MomentsActivity"
            android:label="@string/title_activity_moments"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".AddMomentPhotoActivity" />
        <activity android:name=".AddMomentExpenseActivity" />
        <activity android:name=".AddMomentStatusActivity"></activity>
    </application>

</manifest>